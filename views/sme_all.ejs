<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-title">
        <h4>All Registered SME </h4>
      </div>
      <div class="card-body">

        <% if (userSME.length == 0) { %>
          <br> <br>
          <h3 class="m-5 text-center mb-5">There is no registered SME at the moment</h3>

          <% } else{%>
            <div class="table-responsive">
              <%= count = 1 %>
              <table class="table table-hover ">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Business Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Alternative Number</th>
                    <th>Business Type</th>
                    <th>Business Address</th>
                    <th>Staff Strength</th>
                    <th>About Organisation </th>
                  </tr>
                </thead>
                <tbody>
                  Pending Leaves
                  <% userSME.forEach((sme)=> { %>

                    <tr>
                      <td>
                        <%= count ++ %>
                      </td>
                      <td>
                        <a href="/mgt/jvmc_sme/<%= sme.id %>">
                          <%= sme.name %>
                        </a>
                      </td>

                      <td>
                        <a href="/mgt/jvmc_sme/<%= sme.id %>">
                        </a>
                        <%= sme.email %>
                      </td>
                      <td>
                        <a href="/mgt/jvmc_sme/<%= sme.id %>">
                          <%= sme.phone_number %>
                        </a>

                      </td>
                      <td>
                        <a href="/mgt/jvmc_sme/<%= sme.id %>">
                          <%= sme.phone_number1 %>
                        </a>
                      </td>
                      <td>
                        <a href="/mgt/jvmc_sme/<%= sme.id %>">
                          <%= sme.status %>
                        </a>
                      </td>
                      <td>
                        <a href="/mgt/jvmc_sme/<%= sme.id %>">
                          <%= sme.about %>
                        </a>
                      </td>
                      <td>
                        <%= sme.staff_strength %>
                      </td>
                      <td>
                        <%= sme.address %>
                      </td>

                    </tr>
                    <% }); %>



                </tbody>
              </table>
            </div>
        <% } %>
      </div>
    </div>
  </div>