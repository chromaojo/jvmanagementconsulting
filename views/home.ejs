<!-- Carousel Section  -->
<div class="row">
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">

        <div class="carousel-inner">
            <div class="carousel-item active">

                <img src="/assets/img/ban.png" alt="Announcement Banne" height="220vmax" width="100%">

                <div class="container">
                    <div class="carousel-caption">
                        <h1 class="text-capitalize ">
                            <%= announce.title %>
                        </h1>
                        <p class="text-capitalize text-dark">
                            <%= announce.message %>
                        </p>

                    </div>
                </div>
            </div>

            <div class="carousel-item">
                <img src="/assets/img/ban.png" alt="Announcement Banne" height="220vmax" width="100%">
                <div class="container">
                    <div class="carousel-caption ">
                        <h1 class="text-capitalize">
                            <%= announce.title2 %>
                        </h1>
                        <p class="text-capitalize text-dark">
                            <%= announce.message2 %>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="row" id="login">
    <div class="col-md-8">
        <div class="card">
            <div class="card-title">
                <h4>All Reports</h4>
            </div>
            <div class="card-body">
                <ul class="timeline">
                    <% if (userRept=="" ) { %>
                        <br>
                        <h3 class="m-5 text-center mb-5">There is no report available at the moment</h3>
                        <br>
                        <% } else{%>
                            <% userRept.forEach((department)=> { %>
                                <li>
                                    <div class="timeline-badge success"><i class="fa fa-check-circle-o"></i></div>
                                    <div class="timeline-panel">
                                        <a href="/dash/<%= department.report_id %>">
                                            <div class="timeline-heading">
                                                <h5 class="timeline-title text-capitalize">
                                                    <%= department.date %> || <%= department.title %>
                                                </h5>
                                            </div>
                                            <div class="timeline-body">
                                                <p>
                                                    <%= department.time %> || <%= department.name %>
                                                </p>
                                            </div>
                                        </a>
                                    </div>
                                </li>
                                <% }); %>
                                    <% } %>
                </ul>
            </div>
        </div>
        <!-- /# card -->
    </div>
    <div class="col-md-4">
        <div class="card border-primary rounded">

            <div class="user-card-profile round-img text-center">
                <a href="/staff/profile">
                    <img class="height-150" src="<%= userData.mee.profilePix %>" alt="Profile Picture">
                </a>
            </div>
            <div class="designation m-t-27 m-b-27 text-center">
                <a href="/staff/profile">
                    <h4 class="text-capitalize">
                        <%= userData.mee.surname %>
                            <%= userData.mee.otherNames %>
                    </h4>
                    <h6 class="text-capitalize">
                       Office : <%= userData.mee.office %>
                    </h6>
                </a>
            </div>
        </div>
        <a href="/staff/leave/request">
            <div class="card p-0">
                <p class="text-center mt-2">Leave Application </p>
                <div class="stat-widget-three home-widget-three p-3">
                    <div class="border">
                        <div class="stat-icon bg-facebook">
                            <i class="ti-pulse"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-digit"><small>Apply For Leave</small></div>
                            <div class="stat-text">Click Now</div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        <a href="/staff/create/task">
            <div class="card p-0">
                <p class="text-center mt-2">Track Your Performance </p>
                <div class="stat-widget-three home-widget-three p-3">
                    <div class="border">
                        <div class="stat-icon bg-primary">
                            <i class="ti-panel"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-digit">Performance</div>
                            <div class="stat-text">Track It</div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        <div class="card p-0">
            <p class="text-center mt-2">Unfinished Report</p>
            <div class="stat-widget-three home-widget-three p-3">
                <div class="border">
                    <div class="stat-icon bg-facebook">
                        <i class="ti-check-box"></i>
                    </div>
                    <div class="stat-content">
                        <div class="stat-digit"><small>Unsent Report</small></div>
                        <div class="stat-text"> <%= unFinished.length %></div>
                    </div>
                </div>
            </div> <hr>
            <div class="container p-3">
                <ol>
                    <% unFinished.forEach((yet)=> { %>
                        <li>
                            <%= yet.name %>
                        </li>
                        <% }); %>
                </ol>
            </div>
        </div>
        <a href="">
            <div class="card p-0">
                <p class="text-center mt-2">Best Staff Of The Month </p>
                <div class="stat-widget-three home-widget-three p-3">
                    <div class="border">
                        <div class="stat-icon bg-facebook">
                            <i class="ti-thumb-up"></i>
                        </div>
                        <div class="stat-content">
                            <div class="stat-digit">Nominate / Vote</div>
                            <div class="stat-text">Best Staff</div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
        <!-- /# card -->
        <br> <br><br><br><br>
    </div> <br> <br><br>
</div>
</div>