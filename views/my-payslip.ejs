<section id="main-content">
    <title>|| Payslip <%= payroll.month_id %>
    </title>
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <h2 class="text-centre">Payslip || <%= payroll.month_id %>
                </h2> <br>
                <div class="bootstrap-data-table-panel">
                    <div class="table-responsive">
                        <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                            <thead>
                                <% let count=1; %>
                                    <tr>
                                        <th>
                                            <img class="height-150" src="/assets1/images/logo.jpg" alt="company logo">
                                        </th>
                                        <th class="p-3">Name : <br><%= payroll.name %>
                                        </th>
                                        <th class="p-3">Month : <br>
                                            <%= payroll.month_id %>
                                        </th>
                                        <th>Bank Details : <br>
                                            <%= payroll.bank_name %> <br>
                                                <%= payroll.acct_name %> <br>
                                                    <%= payroll.account_number %>
                                        </th>
                                        <th class="p-3">#</th>
                                    </tr>
                                 
                            </thead>
                            <tbody>

                                <tr>
                                    <th scope="row">

                                        <%= count %>
                                    </th>
                                    <td>
                                        <h3>Salary :</h3>
                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.salary %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +1 %>
                                    </th>
                                    <td>

                                        <h3>Annual Salary :</h3>
                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.ann_salary %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +2 %>
                                    </th>
                                    <td>
                                        <h3>Taxable Income :</h3>
                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.taxable_inc %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +3 %>
                                    </th>
                                    <td>
                                        <h3> Tax : </h3>
                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.tax %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +4 %>
                                    </th>
                                    <td>

                                        <h3>Consolidated Relief :</h3>
                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.con_relief %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +5 %>
                                    </th>
                                    <td>
                                        <h3>Annual Net Salary :</h3>

                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.annual_net %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +6 %>
                                    </th>
                                    <td>

                                        <h3>Net / Take Home :</h3>
                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.take_home %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +7 %>
                                    </th>
                                    <td>

                                        <h3>Deduction :</h3>
                                    </td>
                                    <td>
                                        <h3>
                                            <%= payroll.deduction %> (NGN)
                                        </h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">

                                        <%= count +8 %>
                                    </th>

                                    <td>
                                        <h3>Balance :</h3>

                                    </td>
                                    <td></td>
                                    <td></td>
                                    <td>
                                        <h3>
                                            <%= payroll.balance %> (NGN)
                                        </h3>

                                    </td>

                                </tr>



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /# card -->
        </div>
        <!-- /# column -->
    </div>
    <!-- /# row -->
</section>